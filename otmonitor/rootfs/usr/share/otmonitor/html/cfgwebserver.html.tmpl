<fieldset>
<legend>Manage users</legend>
<table width="100%">
<colgroup>
<col style="width: 10em;">
<col style="width: 1em;">
<col style="width: 6em;">
<col width="*">
</colgroup>
<tr>
<td rowspan="5" class="fill">
<select id="userlist" size="10" onchange="usersel(this)">
% foreach n [security getusers] {
<option>$n</option>
% }
</select>
</td>
<td rowspan="3">&nbsp;</td>
<td>User name:</td>
<td class="fill">
<input type="text" id="username">
</td>
</tr>
<tr>
<td>Password:</td>
<td class="fill">
<input type="password" id="password">
</td>
</tr>
<tr>
<td>Confirm:</td>
<td class="fill">
<input type="password" id="confirm">
</td>
</tr>
<tr>
<td colspan="3" align="center">
<button onclick="usermod()" style="width: 12em;">Create/modify user</button>
</td>
</tr>
<tr>
<td colspan="3" align="center">
<button onclick="userdel()" style="width: 12em;">Delete user</button>
</td>
</tr>
</table>
</fieldset>

</body>
</html>
